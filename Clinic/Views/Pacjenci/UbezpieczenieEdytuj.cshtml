                @Html.ValidationMessageFor(model => model.DataWaznosci, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót", "Historia", new { id = Model.PacjentID })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
