@model Clinic.Models.Skierowanie

<h2>@ViewBag.Title - nowe skierowanie</h2>

<p style="color:red">@ViewBag.ErrorMessage</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.SkierowanieID)

        <div class="form-group">
            @Html.LabelFor(model => model.PacjentID, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.PacjentID, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.PacjentID, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DoktorID, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.DoktorID, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.DoktorID, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Informacja, new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Informacja, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Informacja, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default"/>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Powrót", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}