@model IEnumerable<Clinic.Models.Zaopatrzenie>

<h2>@ViewBag.Title</h2>

@Html.ActionLink("Nowy (LINQ)", "Nowy") <br />
@Html.ActionLink("Nowy (Procedura)", "Nowy")
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ZaopatrzenieID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Opis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dostepnosc)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ZaopatrzenieID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dostepnosc)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edytuj", new { id = item.ZaopatrzenieID }) |
                @Html.ActionLink("Szczegóły", "Szczegoly", new { id = item.ZaopatrzenieID }) |
                @Html.ActionLink("Usuń", "Usun", new { id = item.ZaopatrzenieID })
            </td>
        </tr>
    }
</table>